{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cortex Debug",
            "cwd": "${workspaceRoot}",
            "executable": "./build/${workspaceFolderBasename}.elf",
            "request": "launch",
            "preLaunchTask": "SimpleFOC Build",
            "type": "cortex-debug",
            "showDevDebugOutput": "raw",
            "armToolchainPath": "/opt/gcc-arm-none-eabi/bin",
            "servertype": "openocd",
            "configFiles": [
                "interface/stlink-v2-1.cfg",
                // "target/stm32f7x.cfg"
                "board/st_nucleo_f7.cfg"
            ],
            "postLaunchCommands": [
                "monitor arm semihosting enable"
            ]
        }
    ]
}